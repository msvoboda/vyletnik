<UserControl x:Class="SilverlightVylet.ImageThumb"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="120" d:DesignWidth="120" xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" MouseLeftButtonDown="UserControl_MouseLeftButtonDown">
    
    <Grid x:Name="LayoutRoot" Background="#B9FFFFFF">
        <Border BorderBrush="Silver" BorderThickness="1" Height="Auto" HorizontalAlignment="Stretch" Margin="0,0,0,0" Name="border" VerticalAlignment="Stretch" Width="Auto" CornerRadius="4" Background="{x:Null}">
            <Grid Height="Auto" Name="grid" Width="Auto" Background="{x:Null}">
                <sdk:Label Height="12" Margin="1,1,0,0" Name="labelName" VerticalAlignment="Top" Content="Name" FontSize="8" Background="{x:Null}" />
                <Image Height="Auto" HorizontalAlignment="Stretch" Margin="1,14,1,2" Name="image" Stretch="Uniform" VerticalAlignment="Stretch" Width="Auto" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
