<UserControl x:Class="CustomMarkers.MapPointImage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="90" d:DesignWidth="86" MouseLeftButtonDown="UserControl_MouseLeftButtonDown">
    
    <Grid x:Name="LayoutRoot" Background="{x:Null}">
        <Ellipse Name="Elipse" Fill="#994958E5" Stroke="Black" Opacity="40" Width="8" Height="8" HorizontalAlignment="Left" VerticalAlignment="Top"></Ellipse>
        <Border BorderBrush="Silver" BorderThickness="1" Height="68" HorizontalAlignment="Left" Margin="4,8,0,0" Name="borderImage" VerticalAlignment="Top" Width="68" CornerRadius="4" Background="#43FFFFFF">
            <Image Height="Auto" Name="image" Stretch="Uniform" Visibility="Collapsed" VerticalAlignment="Center" HorizontalAlignment="Center" />
        </Border>
    </Grid>
</UserControl>
